---
interface Props {
  pageTitle: string
  bodyClass?: string
}

const {pageTitle, bodyClass} = Astro.props;
---
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{pageTitle}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <slot name="head"/>
</head>
<body class={bodyClass || ''}>
    <slot/>
</body>
</html>